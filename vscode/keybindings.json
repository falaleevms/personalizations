// Place your key bindings in this file to override the defaultsauto[]
[
    // {
    //     "key": "shift+space",
    //     "command": "workbench.view.extension.sftp"
    // },

    {
        "key": "tab",
        "command": "editor.action.indentLines",
        "when": "editorHasSelection && editorTextFocus && !editorReadonly"
    },

    { "key": "ctrl+t", "command": "workbench.action.terminal.focus"},
    { "key": "ctrl+t", "command": "workbench.action.focusActiveEditorGroup", "when": "terminalFocus"},

    {
        "key": "ctrl+alt+t",
        "command": "workbench.action.toggleMaximizedPanel"
    },    
    {
        "key": "ctrl+shift+]",
        "command": "workbench.action.togglePanel"
    },

    { "key": "ctrl+alt+a",  "command": "cSpell.addWordToUserDictionary" },
    { "key": "ctrl+alt+i",  "command": "cSpell.addIgnoreWord" },

]